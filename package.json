{
  "name": "yt-watch-later",
  "displayName": "YT Watch Later",
  "version": "0.0.2",
  "description": "Add YouTube videos to your Watch Later playlist with a single click.",
  "author": "dnwjn <hello@dnwjn.dev>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "npm run build:brave && npm run build:chrome && npm run build:edge && npm run build:firefox && npm run build:opera",
    "build:brave": "plasmo build --zip --target=brave-mv3",
    "build:chrome": "plasmo build --zip --target=chrome-mv3",
    "build:edge": "plasmo build --zip --target=edge-mv3",
    "build:firefox": "plasmo build --zip --target=firefox-mv2",
    "build:opera": "plasmo build --zip --target=opera-mv3",
    "build:bundle": "plasmo build --source-maps --bundle-buddy",
    "package": "plasmo package",
    "pretty": "prettier --write ."
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "plasmo": "0.89.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "^5.0.0-rc.2"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "overrides": {
    "@parcel/watcher": "2.1.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "cookies",
      "storage"
    ]
  }
}
